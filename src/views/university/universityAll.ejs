<!DOCTYPE html>
<html>
<head>
	<title>Universities</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="../css/main.css">


</head>
<body>
    <%- include('../supportingLayouts/navbar', {condition, nameOfUser}); -%>

	<div class="col-md-10 col-md-offset-1">
		<div><br/>
			<h2>Universities
			</h2>
		</div>
        <div ></br>  
            <% if (universities.length > 0) { %>       
                <table class="table table-hover">
                <thead>
                    <tr >
                        <th style="text-align: center;">Անվանում</th>
                        <th style="text-align: center;">Название</th>
                        <th style="text-align: center;">Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < universities.length; i++) { %>
                        <tr onclick="redirect('<%= universities[i]._id %>');">
                            <td><%= universities[i].name %></td>
                            <td><%= universities[i].nameRU %></td>
                            <td><%= universities[i].nameEN %></td>
                        </tr>
                    <% } %>
                </tbody>
                </table>
            <% } else { %>
                <h3>There arn't any universities yet.</h3>
            <% } %>
          </div>

		<div class="mssg bg-danger">
			<span id="check">  <%= msgErr %>  </span>
		</div>
    </div>
    <script>
        function redirect(uri) {
            window.location = window.location.toString().replace('/all', '/?id='+ uri)
        }
    </script>
</body>
</html>